doctype html
html(lang="ru")
    head
        include base/head.pug
    body
        include base/header.pug

        main.page.page-person 
            .wrapper

                .page-header.page-header--breadcrumps_mobile_top_left.news_single-header

                    .page-title.page-title--medium.news_single-title.person-title
                        h1 Бабаев Михаил
                    .page-breadcrumps.news_single-breadcrumps
                        +breadcrumps([
                            {
                                "href": 'index.html',
                                "name": "Главная"
                            },
                            {
                                "href": "news.html",
                                "name": "Зал славы"
                            },
                            {
                                "name": "Бабаев Михаил"
                            }
                        ])

                    .page-return_back.news_single-return_back

                        a(href="news.html").button.button-back
                            +icon('arrow-left')
                            span Зал славы

                .page-body
                    
                    article
                        .person
