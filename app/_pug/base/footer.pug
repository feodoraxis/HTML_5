footer.footer#footer
    
    .footer-widgets
        .wrapper 
            .footer-widget.footer-mobile 
                .mobile_applications.mobile_applications-mobile
                    .mobile_applications-item
                        a(href="#")
                            img(src="img/icons/android-app.svg", alt="") 

                    .mobile_applications-item
                        a(href="#")
                            img(src="img/icons/ios-app.svg", alt="") 

            .footer-widget.footer-mobile
                .social_networks.social_networks-mobile.social_networks-left
                    .social_networks-title
                        .section_title.section_title-white
                            h2 Мы в соцсетях

                    ul.social_networks-list

                        each item in social_networks

                            li
                                a(href="#") 
                                    +icon( item )

            .footer-widget
                .row
                    .col-md-6
                        .partners
                            .partners-title
                                .section_title.section_title-white
                                    h2 Официальные партнеры

                            ul.partners-list

                                each item in partners_1
                                    li
                                        a(href="#") 
                                            img(src= item, alt="")

                    .col-md-6.footer-desctop
                        .social_networks
                            .social_networks-title
                                .section_title.section_title-white.section_title-right
                                    h2 Мы в соцсетях

                            ul.social_networks-list

                                each item in social_networks

                                    li
                                        a(href="#") 
                                            +icon( item )


            .footer-widget
                .partners.partners-spaces
                    .partners-title
                        .section_title.section_title-white
                            h2 Партнеры и спонсоры

                    ul.partners-list

                        each item in partners_2
                            li
                                a(href="#") 
                                    img(src= item, alt="")

            .footer-widget
                .row
                    .col-md-9
                        .partners.partners-spaces
                            .partners-title
                                .section_title.section_title-white
                                    h2 Информационные партнеры

                            ul.partners-list

                                each item in partners_3
                                    li
                                        a(href="#") 
                                            img(src= item, alt="")

                    .col-md-3.footer-desctop
                        .mobile_applications
                            .mobile_applications-item
                                a(href="#")
                                    img(src="img/icons/android-app.svg", alt="") 

                            .mobile_applications-item
                                a(href="#")
                                    img(src="img/icons/ios-app.svg", alt="") 
    .footer-main
        .wrapper 
            .footer-main-flexbox
                .footer-left
                    .footer-logo
                        a(href="#") 
                            include ../../img/logo-white.svg

                    .footer-copyright
                        p &copy; 2000-2022   Федерация регби России, все права защищены.

