                                    div
                                        .person-thumbnail.person-thumbnail--slide
                                            img(src="img/trainer.jpg", alt="")
                                    div
                                        .person-thumbnail.person-thumbnail--slide
                                            img(src="img/trainer.jpg", alt="")
                                    div
                                        .person-thumbnail.person-thumbnail--slide
                                            img(src="img/trainer.jpg", alt="")


                                .person-rewards
                                    ul
                                        li
