                                        li
                                            .reward
                                                p Кубок России по регби 1992, 1993, 1997, 2002, 2004, 2005, <br>2007, 2010

                                        li
                                            .reward
                                                p Чемпион России по регби 1993, 2003, 2004, 2006, 2007, <br>2008, 2009, 2010

                                        li
                                            .reward
                                                p Участник Кубка мира по регби 2011 года

                                        li
                                            .reward
                                                p Участник Кубка мира по регби-7 2001 года

        include base/footer.pug 